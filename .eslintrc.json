{
  "env": {
      "browser": true,
      "es2021": true
  },
  "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
  },
  "plugins": [
      "@typescript-eslint"
  ],
  "rules": {
      "indent": [
          "error",
          "tab"
      ],
      "linebreak-style": [
          "error",
          "unix"
      ],
      "quotes": [
          "error",
          "single"
      ],
      "semi": [
          "error",
          "never"
      ],
      "key-spacing": [
          2,
          {
              "singleLine": {
                  "beforeColon": false,
                  "afterColon": true
              },
              "multiLine": {
                  "beforeColon": true,
                  "afterColon": true,
                  "align": "colon"
              }
          }
      ],
      "comma-spacing": [
          "error",
          {
              "before": true,
              "after": true
          }
      ],
      "arrow-spacing": "error",
      "space-infix-ops": "error",
      "no-multi-spaces": "error",
      "no-empty-function": ["error", { "allow": ["constructors"] }],
      "no-else-return": "error",
      "object-property-newline": "error",
      "newline-before-return": "error",
      "object-curly-spacing": [
          "error",
          "always"
      ],
      "object-curly-newline": [
          "error",
          {
              "ObjectExpression": "always",
              "ObjectPattern": {
                  "multiline": true
              },
              "ImportDeclaration": "never",
              "ExportDeclaration": {
                  "multiline": true,
                  "minProperties": 3
              }
          }
      ],
      "no-multiple-empty-lines": [
          "error",
          {
              "max": 1
          }
      ],
      "array-bracket-spacing": [
          "error",
          "always"
      ],
      "array-bracket-newline": [
          "error",
          {
              "multiline": true
          }
      ],
      "arrow-parens": "error",
      "eol-last": [
          "error",
          "always"
      ],
      "no-trailing-spaces": "error",
      "max-lines-per-function": [
          "error",
          {
              "max": 30,
              "skipBlankLines": true,
              "skipComments": true
          }
      ],
      "max-lines": [
          "error",
          {
              "max": 200,
              "skipBlankLines": true,
              "skipComments": true
          }
      ],
      "keyword-spacing": [
          "error",
          {
              "before": true,
              "after": true
          }
      ],
      "padded-blocks": [
          "error",
          "never"
      ],
      "padding-line-between-statements": [
          "error",
          {
              "blankLine": "always",
              "prev": [
                  "function",
                  "if",
                  "expression",
                  "return"
              ],
              "next": "*"
          },
          {
              "blankLine": "always",
              "prev": "*",
              "next": [
                  "function",
                  "if",
                  "expression"
              ]
          }
      ],
      "space-before-function-paren": [
          "error",
          {
              "anonymous": "always",
              "named": "always"
          }
      ],
      "space-before-blocks": "error",
      "space-in-parens": [
          "error",
          "always",
          {
              "exceptions": [
                  "{}"
              ]
          }
      ],
      "max-params": ["error", 4],
      "max-len": [
          "error",
          {
              "code": 110
          }
      ],
      "no-use-before-define": "error"
  }
}