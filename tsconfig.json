{
  "compilerOptions": {
    "lib": ["ES2023"],
    "target": "ES2022",                           
    "rootDir": "./src",                                
    "declaration": true,                                           
    "outDir": "./build",                                 
    "esModuleInterop": true,                           
    "forceConsistentCasingInFileNames": true,            
    "module": "CommonJS",
    "strict": true,                                   
    "noImplicitAny": true,                            
    "skipLibCheck": true                                
  }
  , "include": ["src/**/*"]
}